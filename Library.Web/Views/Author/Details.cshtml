@model Author

@{
    ViewBag.Title = "Author details";
}

<div class="card">
    <div class="card-header">
        <h3>Author details</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <tr>
                <th>First Name</th>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>@Model.LastName</td>
            </tr>
            @if (Model.BookAuthor.Count > 0)
            {
                <tr>
                    <th>Book(s)</th>
                    <td>
                        @foreach (var bookAuthor in Model.BookAuthor)
                        {
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@bookAuthor.BookId">@bookAuthor.Book.Title</a>
                            <br/>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="card-footer">
        <a asp-action="List" class="btn btn-secondary">List of authors</a>
    </div>
</div>